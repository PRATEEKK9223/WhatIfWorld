<%- layout('layouts/boilerplate')%>
<body>
    
    <section class="hero container text-center text-md-start">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="fw-bold display-5">Predict the Future of What-If Scenarios</h1>
                <p class="text-secondary mt-3">
                    Enter a scenario. Get realistic AI-powered predictions.
                </p>
                <div class="mt-4">
                    <a href="/scenario" class="btn btn-primary btn-lg me-2 ">Explore Now</a>
                    <a href="/community" class="btn btn-outline-primary btn-lg mt-3 mt-md-0">View Community</a>
                </div>
            </div>
            <div class="col-md-6 text-center mt-4 mt-md-0">
                <img src="/images/tv.svg" class="img-fluid" width="350">
            </div>
        </div>
    </section>
    <section class="container text-center mt-4">
        <h2 class="fw-bold fs-1 text-start">How It Works</h2>

        <div class="row mt-4">
            <div class="col-md-4">
                <div class="how-it-works-icon text-primary">
                    <img src="/images/bulb.svg" width="200">
                </div>
                <p class="fw-semibold fs-3">Enter your ‘What if?’</p>
            </div>
            <div class="col-md-4">
                <div class="how-it-works-icon text-primary">
                    <img src="/images/chart.svg" width="200">
                </div>
                <p class="fw-semibold fs-3">AI predicts outcomes & charts</p>
            </div>
            <div class="col-md-4">
                <div class="how-it-works-icon text-primary">
                    <img src="/images/earth.svg" width="200">
                </div>
                <p class="fw-semibold fs-3">Share & discuss globally</p>
            </div>
        </div>
    </section>

    <section class="container mt-5">
        <h2 class="fw-bold mb-4">Examples</h2>

