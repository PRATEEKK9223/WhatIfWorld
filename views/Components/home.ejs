                        <input type="text"  name="scenario" value="What if people work only 4 days a week?" style="display:none">
                        <input type="text" name="domain" value="all"  style="display:none">
                        <button type="submit" class="btn btn-outline-primary" style="width:100%">Try This Scenario</button>
                    </form>
                </div>
            </div>
