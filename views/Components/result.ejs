<%- layout('layouts/boilerplate') %>
 <!-- THis is for result page -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="css/chart.css"> 

<body>
  <div class="container">
    <h2>Scenario: <%= result.textual_analysis.scenario %></h2>
    <p><strong>Domain:</strong> <%= result.textual_analysis.domain %></p>
    <p><strong>Probability:</strong> <span class="probability-box"><%= result.textual_analysis.probability %>%</span> </p>

    <div class="section">
      <h3>Key Implications:</h3>
      <ul>
        <% result.textual_analysis.key_implications.forEach(item => { %>
          <li><%= item %></li>
        <% }) %>
      </ul>
    </div>

    <div class="section">
      <h3>Potential Challenges:</h3>
      <ul>
        <% result.textual_analysis.potential_challenges.forEach(item => { %>
          <li><%= item %></li>
        <% }) %>
      </ul>
    </div>

    <div class="section">
      <h3 class="chart-title">Statistical Impact Overview with bar chart</h3>
      <canvas id="scenarioChart" class="img-fluid"></canvas>
    </div>

    <hr>

    <div class="section">
      <h3 class="chart-title">Statistical Impact Overview with Pie chart</h3>
      <div class="d-flex justify-content-center">
        <canvas id="scenarioChart-pie" width="500"  class="img-fluid"></canvas>
      </div>
  </div>

  <hr>

  <div id="buttons">
    <form action="/submit-result" method="POST" id="Twobtn">
      <input type="hidden" name="resultId" value="<%= resultId %>" >
      <button type="submit" name="action" value="yes" class="btn">🌍 Share in community</button>
      <button type="submit" name="action" value="no" class="btn">🔙 Go back</button>
    </form>
    <button id="downloadPDF" class="btn">🧾Download result</button>
  </div>
  <script>
      const stats = <%- JSON.stringify(result.statistics) %>;
      // expose resultId both as a window property and a global var so external scripts can access it
      window.resultId = '<%= resultId %>';
      var resultId = '<%= resultId %>';
  </script>
  <script src="js/resultScript.js">  
</script>
<!-- For coverting the PDF -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
</body>

