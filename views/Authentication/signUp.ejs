<%- layout("layouts/boilerplate")%>
<link rel="stylesheet" href="css/signUp.css">
<body>
    <div class="container d-flex justify-content-center align-items-center"></div>
  <div class="signup-container mb-5">
    <div class="d-flex justify-content-center align-items-center">
        <div class="d-flex align-items-center mb-3">
            <img src="/images/logo.svg" width="60" >
            <div>
                <h3 class="m-0 fw-bold">WhatIfWorld</h3>
                <small class="text-muted">Explore What-If Scenarios with AI</small>
            </div>
        </div>
    </div>

    <h3>Sign Up</h3>

    <form id="signupForm"  action="/signUp" method="POST" novalidate>
      <div class="mb-3">
        <input type="text" id="username" class="form-control" name="username" placeholder="Username" required  />
        <div class="invalid-feedback">Please enter your username.</div>
      </div>

      <div class="mb-3">
        <input type="email" id="email" name="email" class="form-control" placeholder="Email" required />
        <div class="invalid-feedback">Please enter a valid email address.</div>
      </div>

      <div class="mb-3 input-group">
        <input type="password" id="password" name="password" class="form-control" placeholder="Password" required />
        <span class="input-group-text" onclick="togglePassword('password', this)">
          <i class="bi bi-eye-slash"></i>
        </span>
        <div class="invalid-feedback">Please enter a password.</div>
      </div>

      <div class="mb-4 input-group">
        <input type="password" id="confirmPassword" class="form-control" placeholder="Confirm password" required />
        <span class="input-group-text" onclick="togglePassword('confirmPassword', this)">
          <i class="bi bi-eye-slash"></i>
        </span>
        <div class="invalid-feedback">Passwords do not match.</div>
      </div>

      <button type="submit" class="btn btn-primary">Sign Up</button>
    </form>
     <div class="text-center mt-3 mb-2 text-muted">or</div>

      <a href="/auth/google" class="btn btn-google">
         <img src="/images/google.svg" alt="Google logo">
            Sign up with Google
      </a> 
       
      </button>

      <div class="login-text">
        Already have an account? <a href="/login">Login</a>
      </div>
  </div>
</div>

  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <script src="js/signUp.js"></script>
</body>
</html>
