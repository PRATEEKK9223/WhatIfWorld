<%- layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/css/profile.css">

<body class="bg-light">
  <div class="container py-5">

    <!-- Header (brand + logout) -->
    <header class="d-flex justify-content-between align-items-center mb-4">
      <div class="brand d-flex align-items-center">
        <img src="/images/logo.svg" alt="Logo" width="50" class="me-2">
        <div>
          <h3 class="fw-bold mb-0">WhatIfWorld</h3>
          <small class="text-muted">Explore What-If Scenarios with AI</small>
        </div>
      </div>
      <a href="/logout" class="text-decoration-none fw-semibold text-dark">Logout</a>
    </header>

    <!-- Profile header: two-column layout -->
    <section class="profile-section mb-5">
      <div class="row w-100 align-items-center">
        <!-- LEFT: image + edit button -->
        <div class="col-md-4 d-flex flex-column align-items-start align-items-md-start align-items-center text-center text-md-start">
          <div class="profile-left text-start">
            <img src="<%=user.photo%>" alt="Profile Picture" class="profile-img mb-3">
            <div>
                <% if (user._id.toString() === currentUser._id.toString()) { %>
                  <a href="/edit-profile" class="btn btn-outline-dark d-inline-block">Edit Profile</a>
                <% } %>
            </div>
          </div>
        </div>

        <!-- RIGHT: name, email, dob -->
        <div class="col-12 col-lg-8">
          <div class="profile-right">
            <h4 class="mb-1 fw-bold"><%=user.username%></h4>
            <p class="text-muted mb-1"><%=user.email%></p>
            <p class="text-muted small">
            <%if(user.dateOfBirth){ %>
              <%=user.dateOfBirth.toDateString()%>
            <%}%>
          </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Bio -->
    <section class="bio-section mb-5">
      <h5 class="fw-semibold mb-3">Bio</h5>
      <p class="text-muted">
        <%if(user.bio){ %>
          <%=user.bio%>
        <%}%>
        <%if(!user.bio){ %>
         "Your not added a bio yet."
        <%}%>
      </p>
    </section>

    <!-- Posts (2 per row on large screens, 1 per row on small) -->
    <section class="posts-section">
      <h5 class="fw-semibold mb-3">Posts</h5>

      <div class="row g-3">
        <!-- each post: full width on small, half width on large -->
        <div class="col-12 col-lg-6">
          <div class="post-card"></div>
        </div>

        <div class="col-12 col-lg-6">
          <div class="post-card"></div>
        </div>

        <div class="col-12 col-lg-6">
          <div class="post-card"></div>
        </div>

        <div class="col-12 col-lg-6">
          <div class="post-card"></div>
        </div>

        <!-- add more posts as needed; grid will behave the same -->
      </div>
    </section>

  </div>

  <!-- Small JS for profile image preview (optional) -->
  <script>
    // Optional: If you have a file input on the edit page, you can preview upload.
    // Example usage here is just a placeholder (not required for layout).
    const input = document.getElementById('profileUpload');
    const img = document.querySelector('.profile-img');
    if (input) {
      input.addEventListener('change', (e) => {
        const f = e.target.files[0];
        if (f) img.src = URL.createObjectURL(f);
      });
    }
  </script>
</body>
